.slot {
    color: #fff;
    display: grid;
    grid-template-columns: 3fr 1fr;
    width: 100%;
    height: 10rem;
    background-color: rgba(0, 0, 0, 0.9);
    padding: 0 1rem;
    border-radius: 3px;
    box-shadow: 0 3px 3px rgba(0, 0, 0, 0.4);
    border-left: 4px solid rgb(182, 49, 78);

    &:not(:last-child) {
      margin-bottom: 2rem;
    }
    .left {
      display: flex;
      align-items: center;
      img {
        border-radius: 50%;
        height: 85%;
        object-fit: cover;
        margin-right: 1.5rem;
      }
      .info {
        .name {
          font-size: 1.2rem;
          letter-spacing: 0.25rem;
          font-weight: 700;
        }
        ul {
          list-style: none;
          padding: 1rem 0;
          li {
            display: inline-block;
            padding-right: 0.5rem;
          }
        }
        .loc {
          li:nth-of-type(1) {
            text-transform: capitalize;
            color: hotpink;
          }
          li:nth-of-type(2) {
            background-color: red;
            padding: 0.25rem;
            border-radius: 3px;
            color: #fff;
          }
          li:nth-of-type(3) {
            background-color: green;
            padding: 0.25rem;
            border-radius: 3px;
            color: #fff;
          }
        }
      }
    }
    .right {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      font-size: 1.6rem;
      font-weight: 700;
    }
  }

  .loader {
  position: absolute;
  // top: 50%;
  // left: 40%;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: grid;
  z-index: 1000;
}
.loader svg {
  height: 6rem;
  width: 6rem;
  fill: #fff;
  transform-origin: 44% 50%;
  animation: rotate 1.5s infinite linear;
  margin: auto;
}

@keyframes rotate {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

